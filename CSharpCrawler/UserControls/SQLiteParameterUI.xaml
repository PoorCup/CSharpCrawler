<UserControl x:Class="CSharpCrawler.UserControls.SQLiteParameterUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSharpCrawler.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid Height="40">
        <Label Content="参数名" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
        <Label Content="@" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="45,0,0,0" Foreground="Silver"></Label>
        <TextBox Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="60,0,0,0" Width="120" Name="tbox_ParameterName"/>
        <Label Content="类型" HorizontalAlignment="Left" Margin="200,0,0,0" VerticalAlignment="Center"/>
        <ComboBox Style="{StaticResource ComboBoxStyle}" HorizontalAlignment="Left" Margin="240,0,0,0" Name="combox_DataTypes"/>
    </Grid>
</UserControl>
